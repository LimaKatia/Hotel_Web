@model CapaEN.HabitacionEN

@{
    ViewData["Title"] = "Detalles";
}

<div class="container mt-5">
    <h1 style="font-size:1.5rem" class="text-center mb-4">Detalles de la Habitación</h1>

    <div class="card">
        <div class="card-header">
            <h4 class="text-center">Habitaciones</h4>
        </div>
        <div class="card-body">
            <dl class="row">
                <dt class='col-sm-2'>
                    @Html.DisplayNameFor(model => model.NumeroDeHabitacion)
                </dt>
                <dd class='col-sm-10'>
                    @Html.DisplayFor(model => model.NumeroDeHabitacion)
                </dd>
                <dt class='col-sm-2'>
                    @Html.DisplayNameFor(model => model.Precio)
                </dt>
                <dd class='col-sm-10'>
                    @Html.DisplayFor(model => model.Precio)
                </dd>
                <dt class='col-sm-2'>
                    @Html.DisplayNameFor(model => model.IdEstado)
                </dt>
                <dd class='col-sm-10'>
                    @Html.DisplayFor(model => model.state.Nombre)
                </dd>
                <dt class='col-sm-2'>
                    @Html.DisplayNameFor(model => model.IdTipoDeHabitacion)
                </dt>
                <dd class='col-sm-10'>
                    @Html.DisplayFor(model => model.TipoDeHabitacion.Nombre)
                </dd>

            </dl>
        </div>
    </div>

    <div class="mt-3">
        @Html.ActionLink("Modificar", "Edit", new { id = Model.Id }, new {@class = "btn btn-success me-3"}) |
        <a asp-action="Index" class="btn btn-primary">
            <i class="fas fa-arrow-left"></i> Regresar
        </a>
    </div>
</div>

