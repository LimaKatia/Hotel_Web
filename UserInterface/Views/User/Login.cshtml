@model CapaEN.UserEN

@{
    ViewData["Title"] = "Login";
}
<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <h1 class="text-center mb-4">Inicio de sesión</h1>
            <form asp-action="Login">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                <div class="mb-3">
                    <label for="Login" class="form-label">Usuario</label>
                    <div class="input-group">
                        <span class="input-group-text"><i class="fas fa-user me-1"></i></span>
                        <input type="text" id="Login" name="Login" class="form-control" aria-describedby="basic-addon1" placeholder="Ingrese su nombre de usuaio" />
                    </div>
                    <span class="text-danger" asp-validation-for="Login"></span>
                </div>
                <div class="mb-3">
                    <label for="Password" class="form-label">Contraseña</label>
                    <div class="input-group">
                        <span class="input-group-text"><i class="fas fa-key me-1"></i></span>
                        <input type="password" id="Password" name="Password" class="form-control" aria-describedby="basic-addon2" placeholder="Ingrese su contraseña" />
                    </div>
                    <span class="text-danger" asp-validation-for="Password"></span>
                </div>

                <div class="mb-3">
                    <button type="submit" class="btn btn-primary w-100">Iniciar Sesión</button>
                </div>
                <div class="text-center">
                    <span class="text-danger">@ViewBag.Error</span>  
                    <p class="mt-3">¿No tienes una cuenta? <a href="@Url.Action("CreateUser", "User")" class="text-primary">Registrarse</a></p>
                </div>
            </form>
        </div>
    </div>
</div>
