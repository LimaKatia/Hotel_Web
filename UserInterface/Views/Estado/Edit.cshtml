 @model CapaEN.EstadoEN

@{
    ViewData["Title"] = "Edit";
}
<div class="container">
    <div class="row">
        <div class="col-md-8 offset-md-2">
            <div class="card">
                <div class="card-header">
                    <h1 class="text-center mb-0">Editar Estado</h1>
                </div>
                <div class="card-body">
                    <form asp-action="Edit">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        <div class="form-group mt-3">
                            <label asp-for="Nombre" class="control-label"></label>
                            <input asp-for="Nombre" class="form-control mt-3" />
                            <span asp-validation-for="Nombre" class="text-danger"></span>
                        </div>
                        <div class="d-grid gap-2 mt-4">
                            <input type="submit" value="Guardar" class="btn btn-primary me-3" />
                            <a asp-action="Index" class="btn btn-secondary me-3">
                                <i class="fas fa-arrow-left"></i> Regresar
                            </a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}

